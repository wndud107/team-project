<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('includes/head') %>
  <link rel="stylesheet" href="/styles/board-content.css">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
  <%- include('includes/header') %>

  <div class="container">

    <%- include('includes/aside') %> 
    <!-- 사이드바 -->

    <!--게시판-->
    <main class="main-content">
      <h1>자유게시판</h1>
      <div class="main-board">

        <!--upper-->
        <div class="upper-part"> 
          <div class="upper-profile">
            <img src="" alt="user-img">
            <p> <%= data.author %></p>
          </div>
          <p class="upper-date">작성일 : <span id="formatted-date"></span></p>
        </div>
        
        <!-- 조회수 -->
        <div class="upper-part">
          <p class="upper-views">조회수 : <%= data.view %></p>
        </div>

        <!--content-->
        <div class="content">
          <h2 class="title"><%= data.title %></h2>
          <p class="contents"><%= data.content %></p>
          <% if (data.path) { %>
            <img src="<%= data.path %>" width="400"/><p></p>
          <% } %>
        </div>

        <!-- 로그인한 사용자가 작성자와 일치할 경우 수정/삭제 텍스트 표시 -->
        <% if (user && user.id === data.author) { %>
          <div class="edit-delete-container">
            <p id="edit-text" data-id="<%= data._id %>">수정</p>
            <p id="delete-text" data-id="<%= data._id %>">삭제</p>
          </div>
        <% } %>
      </div>

      <h2 class="comments">댓글</h2>

      <div id="comments-section">
        <!-- 댓글이 여기에 출력됩니다 -->
      </div>

      <!--comment-->
      <div class="comment-part">
        <form id="comment-form">
          <input class="comment" name="comment" type="text" placeholder="댓글을 입력하세요">
          <button type="submit" class="comment-submit-btn">등록</button>
        </form>
      </div>

      <div class="go-to-board">
        <form action="go-to-board">
          <button>글 목록</button>
        </form>
      </div>
    </main>
  </div>

  <script>
    // Date formatting function
    function formatDate(date) {
      const options = { year: 'numeric', month: 'long', day: 'numeric' };
      return new Date(date).toLocaleDateString('ko-KR', options);
    }

    // Get the raw date from server-rendered content
    const rawDate = "<%= data.date %>";
    
    // Format the date
    const formattedDate = formatDate(rawDate);

    // Insert the formatted date into the document
    document.getElementById('formatted-date').textContent = formattedDate;

    // Delete text click event
    $('#delete-text').on('click', function() {
      const postId = $(this).data('id');

      if (confirm('정말로 삭제하시겠습니까?')) {
        $.ajax({
          url: '/delete-free-post/' + postId,
          type: 'DELETE',
          success: function(result) {
            alert('삭제되었습니다.');
            window.location.href = '/free-board';
          },
          error: function(err) {
            alert('삭제 중 오류가 발생했습니다.');
          }
        });
      }
    });

    // Edit text click event
    $('#edit-text').on('click', function() {
      const postId = $(this).data('id');
      window.location.href = '/edit-free-board/' + postId;
    });

    // Comment form submission
    $('#comment-form').on('submit', function(e) {
      e.preventDefault();
      const comment = $('input[name="comment"]').val();
      const postId = "<%= data._id %>";
      if (comment.trim() === "") {
        alert("댓글을 입력하세요.");
        return;
      }
      $.ajax({
        url: '/post-comment',
        type: 'POST',
        data: { comment, postId },
        success: function(result) {
          // 댓글 등록 성공 시 처리
          loadComments(); // 댓글을 다시 불러와서 새 댓글이 아래에 표시되도록 함
          $('input[name="comment"]').val('');
        },
        error: function(err) {
          if (err.status === 401) {
            alert('로그인이 필요합니다.');
            window.location.href = '/login';
          } else {
            alert('댓글 등록 중 오류가 발생했습니다.');
          }
        }
      });
    });

    // Load comments
    function loadComments() {
      const postId = "<%= data._id %>";
      $.ajax({
        url: '/get-comments',
        type: 'GET',
        data: { postId },
        success: function(comments) {
          const commentsSection = $('#comments-section');
          commentsSection.empty();
          comments.forEach(comment => {
            const commentElement = $('<div>').addClass('comment-item');
            const commentAuthor = $('<p>').addClass('comment-author').text(comment.author);
            const commentContent = $('<p>').addClass('comment-content').text(comment.content);
            const commentDate = $('<p>').addClass('comment-date').text(new Date(comment.date).toLocaleString('ko-KR'));
            commentElement.append(commentAuthor, commentContent, commentDate);
            commentsSection.append(commentElement);
          });
        },
        error: function(err) {
          console.error('Error loading comments:', err);
        }
      });
    }

    // Load comments on page load
    $(document).ready(function() {
      loadComments();
    });
  </script>
</body>
</html>

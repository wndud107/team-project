<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('includes/head') %>
  <link rel="stylesheet" href="/styles/board-content.css">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
  <%- include('includes/header') %>

  <div class="container">

    <%- include('includes/aside') %> 
    <!-- 사이드바 -->

    <!--게시판-->
    <main class="main-content">
      <h1>자유게시판</h1>
      <div class="main-board">

        <!--upper-->
        <div class="upper-part"> 
          <div class="upper-profile">
            <img src="" alt="user-img">
            <p> <%= data.author %></p>
          </div>
          <p class="upper-date">작성일 : <span id="formatted-date"></span></p>
        </div>

        <!--content-->
        <div class="content">
          <h2 class="title"><%= data.title %></h2>
          <p class="contents"><%= data.content %></p>
          <% if (data.path) { %>
            <img src="<%= data.path %>" width="400"/><p></p>
          <% } %>
        </div>

        <!-- 로그인한 사용자가 작성자와 일치할 경우 수정/삭제 텍스트 표시 -->
        <% if (user && user.id === data.author) { %>
          <div class="edit-delete-container">
            <p id="edit-text" data-id="<%= data._id %>">수정</p>
            <p id="delete-text" data-id="<%= data._id %>">삭제</p>
          </div>
        <% } %>
      </div>

      <!--comment-->
      <div class="comment-part">
        <form action="get-comment">
          <input class="comment" type="text" placeholder="댓글을 입력하세요">
        </form>
      </div>

      <div class="go-to-board">
        <form action="go-to-board">
          <button>글 목록</button>
        </form>
      </div>
    </main>
  </div>

  <script>
    // Date formatting function
    function formatDate(date) {
      const options = { year: 'numeric', month: 'long', day: 'numeric' };
      return new Date(date).toLocaleDateString('ko-KR', options);
    }

    // Get the raw date from server-rendered content
    const rawDate = "<%= data.date %>";
    
    // Format the date
    const formattedDate = formatDate(rawDate);

    // Insert the formatted date into the document
    document.getElementById('formatted-date').textContent = formattedDate;

    // Delete text click event
    $('#delete-text').on('click', function() {
      const postId = $(this).data('id');

      if (confirm('정말로 삭제하시겠습니까?')) {
        $.ajax({
          url: '/delete-free-post/' + postId,
          type: 'DELETE',
          success: function(result) {
            alert('삭제되었습니다.');
            window.location.href = '/free-board';
          },
          error: function(err) {
            alert('삭제 중 오류가 발생했습니다.');
          }
        });
      }
    });

    // Edit text click event
    $('#edit-text').on('click', function() {
      const postId = $(this).data('id');
      window.location.href = '/edit-free-board/' + postId;
    });
  </script>
</body>
</html>

<!DOCTYPE html>
<html lang="ko">
  <head>
    <%- include('includes/head') %>
    <link rel="stylesheet" href="/styles/join.css" />
  </head>
  <body>
    <%- include('includes/header') %>
    <main>
      <div class="join-page1 active" id="page1">
        <form
          class="input-group"
          id="form1"
          onsubmit="event.preventDefault(); goToPage2();"
        >
          <div><img src="/회원가입달력.png" alt="" /></div>
          <section>
            <h2>Healancaler</h2>
            <div>
              <input
                type="text"
                name="id_join"
                class="input-field"
                placeholder="아이디"
                id="id"
                required
              />
            </div>
            <div>
              <input
                type="password"
                name="pw_join"
                class="input-field"
                placeholder="비밀번호"
                id="pw"
                required
              />
            </div>
            <div>
              <input
                type="text"
                name="name_join"
                class="input-field"
                placeholder="이름(본명)"
                id="name"
                required
              />
            </div>
            <div>
              <input
                type="date"
                name="birth_join"
                class="input-field"
                placeholder="생일"
                id="birth"
                required
              />
            </div>
            <div>
              <input
                type="tel"
                name="telnumber_join"
                class="input-field"
                placeholder="전화번호"
                id="telnumber"
                required
              />
            </div>
          </section>
          <section>
            <button id="btn-login" type="submit">다음</button>
          </section>
        </form>
      </div>

      <div class="join-page2" id="page2">
        <form
          class="input-group"
          id="form2"
          onsubmit="event.preventDefault(); submitForm();"
        >
          <img src="/회원가입달력.png" alt="" />
          <section>
            <h2>Healancaler</h2>
            <div>
              <input
                type="number"
                name="height_join"
                class="input-field"
                placeholder="키"
                id="height"
                required
              />
            </div>
            <div>
              <input
                type="number"
                name="weight_join"
                class="input-field"
                placeholder="몸무게"
                id="weight"
                required
              />
            </div>
            <div>
              <input
                type="number"
                name="goal_weight_join"
                class="input-field"
                placeholder="목표 몸무게"
                id="goal_weight"
                required
              />
            </div>
            <div>
              <input
                type="date"
                name="goal_date_join"
                class="input-field"
                placeholder="목표 날짜"
                id="goal_date"
                required
              />
            </div>
            <div>
              <input
                type="text"
                name="nickname_join"
                class="input-field"
                placeholder="닉네임"
                id="nickname"
                required
              />
            </div>
          </section>

          <section>
            <button class="btn-login" type="submit">회원가입</button>
          </section>
        </form>
      <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
      <script>
        function goToPage2() {
          const form1Data = {
            id_join: $("#id").val(),
            pw_join: $("#pw").val(),
            name_join: $("#name").val(),
            birth_join: $("#birth").val(),
            telnumber_join: $("#telnumber").val(),
          };

          $("#page1").removeClass("active").hide();
          $("#page2").addClass("active").show();
          $("#form2").data("form1Data", form1Data);
        }

        function submitForm() {
          const form2Data = {
            height_join: $("#height").val(),
            weight_join: $("#weight").val(),
            goal_weight_join: $("#goal_weight").val(),
            goal_date_join: $("#goal_date").val(),
            nickname_join: $("#nickname").val(),
          };

          const formData = Object.assign(
            {},
            $("#form2").data("form1Data"),
            form2Data
          );

          $.ajax({
            url: "/join",
            method: "POST",
            contentType: "application/json",
            data: JSON.stringify(formData),
            success: function (response) {
              alert("회원가입이 완료되었습니다.");
              window.location.href = "/login";
            },
            error: function (xhr, status, error) {
              alert("회원가입 중 오류가 발생했습니다.");
              console.error("Error:", error);
            },
          });
        }

        $(document).ready(function () {
          $("#page2").hide();
        });
      </script>
    </main>
  </body>
</html>
